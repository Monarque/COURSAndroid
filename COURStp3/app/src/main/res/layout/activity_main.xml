<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikael.courstp3.MainActivity">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/nombre1"
        android:layout_x="10dp"
        android:layout_y="10dp"
        android:hint="Poids" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/nombre2"
        android:layout_x="10dp"
        android:layout_y="50dp"
        android:hint="Taille" />

    <RadioGroup
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_x="10dp"
        android:layout_y="100dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mètre"
            android:id="@+id/radioButtonMETRE"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centimetre"
            android:id="@+id/radioButtonCENTIMETRE"
            android:checked="false" />
    </RadioGroup>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultat"
        android:layout_x="10dp"
        android:layout_y="180dp"
        android:hint="Résultat" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculer l&apos;IMC"
        android:id="@+id/buttonIMC"
        android:layout_x="10dp"
        android:layout_y="200dp"
        android:onClick="click" />
</AbsoluteLayout>
