<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikael.courstp2.MainActivity">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/resultat"
        android:layout_x="10dp"
        android:layout_y="10dp"
        android:hint="RÃ©sultat" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button1"
        android:layout_x="10dp"
        android:layout_y="30dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:layout_x="60dp"
        android:layout_y="30dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:layout_x="110dp"
        android:layout_y="30dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/buttonPLUS"
        android:layout_x="160dp"
        android:layout_y="30dp"
        android:onClick="clickOPERATEUR" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button4"
        android:layout_x="10dp"
        android:layout_y="80dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:layout_x="60dp"
        android:layout_y="80dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button6"
        android:layout_x="110dp"
        android:layout_y="80dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/buttonMOINS"
        android:layout_x="160dp"
        android:layout_y="80dp"
        android:onClick="clickOPERATEUR" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button7"
        android:layout_x="10dp"
        android:layout_y="130dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button8"
        android:layout_x="60dp"
        android:layout_y="130dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button9"
        android:layout_x="110dp"
        android:layout_y="130dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/buttonFOIS"
        android:layout_x="160dp"
        android:layout_y="130dp"
        android:onClick="clickOPERATEUR" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button0"
        android:layout_x="10dp"
        android:layout_y="180dp"
        android:onClick="clickCHIFFRE" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/buttonEGAL"
        android:layout_x="110dp"
        android:layout_y="180dp"
        android:onClick="clickEGAL" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/buttonDIVISER"
        android:layout_x="160dp"
        android:layout_y="180dp"
        android:onClick="clickOPERATEUR" />

</AbsoluteLayout>
